# Wisconsin Hail Tracker - Production Environment Template
# Copy this to .env in production or set as environment variables

# ============================================================================
# REQUIRED - Server Configuration
# ============================================================================
PORT=3001
NODE_ENV=production
FRONTEND_URL=https://wisconsin-hail-tracker.vercel.app

# ============================================================================
# REQUIRED - Database (Choose one option)
# ============================================================================
# Option 1: Use in-memory database (for testing, not recommended for production)
USE_IN_MEMORY_DB=true
DATABASE_URL=

# Option 2: Use Supabase PostgreSQL (recommended for production)
# Get from: https://supabase.com/dashboard/project/_/settings/database
# USE_IN_MEMORY_DB=false
# DATABASE_URL=postgresql://postgres:[PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres

# ============================================================================
# REQUIRED - Authentication (Generate secure secrets)
# ============================================================================
# Generate with: openssl rand -base64 32
JWT_SECRET=CHANGE_THIS_TO_RANDOM_32_CHAR_STRING
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=CHANGE_THIS_TO_DIFFERENT_RANDOM_32_CHAR_STRING
REFRESH_TOKEN_EXPIRES_IN=30d

# ============================================================================
# OPTIONAL - External Services (App works without these)
# ============================================================================

# NOAA Weather API (optional - uses mock data if not provided)
NOAA_API_TOKEN=

# Skip Tracing (optional - uses mock data if not provided)
SKIPTRACE_PROVIDER=mock
TLOXP_API_KEY=

# GoHighLevel CRM Integration (optional)
GHL_API_KEY=
GHL_LOCATION_ID=
GHL_WEBHOOK_SECRET=

# Email via SendGrid (optional - logs to console if not provided)
SENDGRID_API_KEY=
FROM_EMAIL=noreply@wisconsinhailtracker.com
FROM_NAME=Wisconsin Hail Tracker

# SMS via Twilio (optional - logs to console if not provided)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Redis Cache (optional)
REDIS_URL=

# Google Gemini AI (optional - uses fallback scoring if not provided)
# Get free key: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=
GEMINI_MODEL=gemini-1.5-flash

# ============================================================================
# Security & Performance
# ============================================================================
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
LOG_LEVEL=info

# ============================================================================
# Feature Flags
# ============================================================================
ENABLE_SKIP_TRACING=true
ENABLE_EMAIL_CAMPAIGNS=true
ENABLE_SMS_CAMPAIGNS=true
ENABLE_GHL_SYNC=true
ENABLE_AUTO_HAIL_SYNC=false

# ============================================================================
# Cost Tracking
# ============================================================================
SKIPTRACE_COST_PER_LOOKUP=0.25
SMS_COST_PER_MESSAGE=0.0079
EMAIL_COST_PER_MESSAGE=0.001
