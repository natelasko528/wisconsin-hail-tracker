# Server Configuration
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/wisconsin_hail_tracker
# Or use individual connection params:
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=wisconsin_hail_tracker
# DB_USER=postgres
# DB_PASSWORD=yourpassword

# Authentication
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your_super_secret_refresh_token_key_change_this
REFRESH_TOKEN_EXPIRES_IN=30d

# NOAA API (Storm Events Database)
# Get token from: https://www.ncdc.noaa.gov/cdo-web/token
NOAA_API_TOKEN=your_noaa_api_token_here
NOAA_API_URL=https://www.ncdc.noaa.gov/cdo-web/api/v2

# Skip Tracing Service (Choose one)
# TLOxp
SKIPTRACE_PROVIDER=tloxp
TLOXP_API_KEY=your_tloxp_api_key
TLOXP_API_URL=https://api.tloxp.com/v1

# Alternative: IDI Data
# SKIPTRACE_PROVIDER=idi
# IDI_API_KEY=your_idi_api_key
# IDI_API_URL=https://api.ididata.com/v1

# GoHighLevel Integration
GHL_API_KEY=your_ghl_api_key_here
GHL_LOCATION_ID=your_ghl_location_id
GHL_WEBHOOK_SECRET=your_webhook_secret_for_verification
GHL_API_URL=https://rest.gohighlevel.com/v1

# Email Service (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key_here
FROM_EMAIL=noreply@wisconsinhailtracker.com
FROM_NAME=Wisconsin Hail Tracker
REPLY_TO_EMAIL=support@wisconsinhailtracker.com

# SMS Service (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+15551234567

# Ringless Voicemail (Optional - Slybroadcast or similar)
RVM_API_KEY=your_rvm_api_key
RVM_API_URL=https://api.slybroadcast.com

# Redis (for job queue and caching)
REDIS_URL=redis://localhost:6379
# Or use individual connection params:
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=yourredispassword

# Logging
LOG_LEVEL=info
# Options: error, warn, info, debug

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
# 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100
# Max requests per window

# Security
BCRYPT_ROUNDS=10
# Number of bcrypt salt rounds

# External APIs
MAPBOX_API_KEY=your_mapbox_api_key_for_geocoding
# Or use Google Geocoding API
# GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Monitoring (Optional)
# SENTRY_DSN=your_sentry_dsn_for_error_tracking
# DATADOG_API_KEY=your_datadog_api_key

# Feature Flags
ENABLE_SKIP_TRACING=true
ENABLE_EMAIL_CAMPAIGNS=true
ENABLE_SMS_CAMPAIGNS=true
ENABLE_GHL_SYNC=true
ENABLE_AUTO_HAIL_SYNC=true
# Auto sync hail data daily from NOAA

# Cost Tracking
SKIPTRACE_COST_PER_LOOKUP=0.25
SMS_COST_PER_MESSAGE=0.0079
EMAIL_COST_PER_MESSAGE=0.001
